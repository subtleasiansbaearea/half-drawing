{
  "name": "biscuits-n-gravy-backend",
  "version": "1.0.0",
  "engines": {
    "node": "12.16.x",
    "npm": "6.x"
  },
  "scripts": {
    "build-ts": "tsc",
    "postinstall": "npm run build-ts",
    "client": "cd frontend && npm start",
    "server": "nodemon server.js",
    "dev": "concurrently --kill-others-on-fail \"npm run watch-node\" \"npm run watch-ts\" \"npm run client\"",
    "start": "npm run serve",
    "serve": "node build/src/server.js",
    "heroku-postbuild": "cd frontend && npm install && npm install --only=dev --no-shrinkwrap && npm run build",
    "watch-node": "nodemon build/src/server.js",
    "watch-ts": "tsc -w"
  },
  "dependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/node": "^14.0.13",
    "@types/uuid": "^8.0.0",
    "@types/ws": "^7.2.5",
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "https": "^1.0.0",
    "nodemon": "^2.0.4",
    "uuid": "^8.1.0",
    "websocket": "^1.0.31",
    "ws": "^7.4.6"
  },
  "devDependencies": {
    "concurrently": "^4.0.1",
    "typescript": "^3.9.5"
  }
}
