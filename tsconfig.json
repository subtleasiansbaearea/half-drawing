{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",                    
    "lib": ["esnext"],                     
    "allowJs": true,
    "outDir": "build",                          
    "rootDir": ".",
    "strict": true,         
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "src",
    "frontend/src/types"
  ],
  "exclude": [
    "build",
    "node_modules"
  ]
}